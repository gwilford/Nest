#!/opt/local/bin/perl

use strict;
use warnings;
use Data::Dumper;
use lib "/home/pi/perl5/lib/perl5";

open(OUT, ">>nest-streaming.json") || die;

while (<STDIN>) {
	chomp();
	/^event:\ (\S+)/ || next;
	if ($1 eq 'put') {
		my $data = <STDIN>;
		$data =~ s/^data:\ //;
		flock(OUT, 2);
		seek(OUT, 0, 0);
		truncate(OUT, 0);
		print OUT $data;
		flock(OUT, 8);
	}
}
